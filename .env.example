# Application
NODE_ENV=production
PORT=3000
API_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/notio
POSTGRES_USER=user
POSTGRES_PASSWORD=
POSTGRES_DB=notio

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Мониторинг
GRAFANA_ADMIN_PASSWORD=
PROMETHEUS_RETENTION_DAYS=15

# Безопасность
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
ENCRYPTION_KEY=
ENCRYPTION_IV=

# Traefik
TRAEFIK_DOMAIN=example.com
TRAEFIK_ACME_EMAIL=admin@example.com

# Docker
# Для использования стандартных общедоступных образов оставьте эти значения пустыми
REGISTRY=  # Например, docker.io/username или ghcr.io/username для собственных образов
REPOSITORY=  # Имя проекта/репозитория для собственных образов
TAG=latest              # Тег/версия образа
DOMAIN=yourdomain.com   # Основной домен для доступа к приложению

# Логирование
LOG_LEVEL=info
LOG_FILE=app.log

# Desktop App
ELECTRON_DISABLE_SECURITY_WARNINGS=true
ELECTRON_ENABLE_LOGGING=true

# Тестирование
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/notio_test
TEST_REDIS_URL=redis://localhost:6380
TEST_JWT_SECRET=test_secret_key_dont_use_in_production

# CI/CD
DOCKER_REGISTRY=
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password
GITHUB_TOKEN=your-github-token

# Разработка
DEBUG=app:*
VITE_API_URL=http://localhost:3000
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true
BROWSER=none 