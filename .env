# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/notio
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=notio

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=password

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@example.com

# Мониторинг
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION_DAYS=15
PROMETHEUS_AUTH=admin:$$$$2y$$$$10$$$$yourhashhere  # Хеш пароля для Prometheus с четырехкратным экранированием

# Безопасность
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
ENCRYPTION_KEY=your-encryption-key
ENCRYPTION_IV=your-encryption-iv

# Traefik
TRAEFIK_DOMAIN=example.com
TRAEFIK_ACME_EMAIL=admin@example.com
TRAEFIK_AUTH=admin:$$$$apr1$$$$xyz...

# Docker
REGISTRY=your-registry  # Например, docker.io/username или ghcr.io/username
REPOSITORY=notio  # Имя проекта/репозитория
TAG=latest  # Тег/версия образа, например latest, v1.0.0 и т.д.
DOMAIN=example.com  # Основной домен для доступа к приложению

# Логирование
LOG_LEVEL=info
LOG_FILE=app.log

# Desktop App
ELECTRON_DISABLE_SECURITY_WARNINGS=true
ELECTRON_ENABLE_LOGGING=true

# Тестирование
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/notio_test
TEST_REDIS_URL=redis://localhost:6380
TEST_JWT_SECRET=test-secret

# CI/CD
DOCKER_REGISTRY=your-registry
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password
GITHUB_TOKEN=your-github-token

# Разработка
DEBUG=app:*
VITE_API_URL=http://localhost:3000
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true
BROWSER=none 