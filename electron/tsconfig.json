{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}