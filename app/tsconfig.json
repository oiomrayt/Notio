{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "verbatimModuleSyntax": false,
        "paths": {
            "@/*": [
                "*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@types/*": [
                "types/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@styles/*": [
                "styles/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "coverage"
    ]
}