{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "sourceMap": false,
        "removeComments": true,
        "noEmit": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "src/__tests__",
        "src/__mocks__"
    ]
}